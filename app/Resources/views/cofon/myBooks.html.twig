{% extends'base.html.twig' %}


{% block main %}

    <main>
        <div class="user">
            <div class="dashboard">
                <a href="{{ path('myBooks') }}">
                    <p class="myDashboard">Tableau de Bord</p>
                </a>
            </div>
            <div class="dashboardDetail">
                <a href="{{ path('myBooksAsRead') }}">
                    <p class="allMyBooksAsRead">Tous mes livres lus </p>
                </a>
                <a href="{{ path('myBooksReading') }}">
                    <p class="allMyBooksReading">Tous mes livres en cours de lecture</p>
                </a>
                <a href="{{ path('myBooksToRead') }}">
                    <p class="allMyBookksToRead">Tous mes livres à lire</p>
                </a>
            </div>
        </div>

    </main>

    <div class="globalView">
        <div class="read">
            {% for reading in lastASReadUser %}
                <p>Dernier livre lu :</p>
                <p>{{ reading.book.title }}</p>
                <div class="oneImg">
                    <img src="{{ asset('assets/imgcover/' ~ reading.book.cover) }}"
                         data-image="{{ reading.book.cover }}" class="imgCover" alt="Photo de la couverture du livre">
                </div>
            {% endfor %}
        </div>

        <div class="inProgress">
            {% for reading in lastReadingUser %}
                <p>Dernier livre en cours de lecture :</p>
                <p>{{ reading.book.title }}</p>
                <div class="oneImg">
                    <img src="{{ asset('assets/imgcover/' ~ reading.book.cover) }}"
                         data-image="{{ reading.book.cover }}" class="imgCover" alt="Photo de la couverture du livre">
                </div>
            {% endfor %}
        </div>

        <div class="toRead">
            {% for reading in lastToReadUser %}
                <p>Dernier livre à lire :</p>
                <p>{{ reading.book.title }}</p>
                <div class="oneImg">
                    <img src="{{ asset('assets/imgcover/' ~ reading.book.cover) }}"
                         data-image="{{ reading.book.cover }}" class="imgCover" alt="Photo de la couverture du livre">
                </div>
            {% endfor %}
        </div>


    </div>

{% endblock %}
