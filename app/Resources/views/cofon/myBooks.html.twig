{% extends'base.html.twig' %}



{% block main %}

<main>
    <div class="user">
        <p class="pseudo">Pseudo username</p>
            <li>Accueil</li>
            <li>Profil</li>
            <li>Mes lectures</li>
            <li>Recommandations</li>

    </div>

</main>

    <div class="globalView">
        <div class="read">Dernier livre lu :
        {% for reading in allReadingUser %}
            {% for book in allBookForUser %}
                {% if reading.status == '1'%}
                    {% if book.id == reading.book.id  %}
                        <p>{{ reading.book.id }}</p>
                        <p>{{ book.title }}</p>
                        <div class="oneImg">
                            <img src="{{ asset('assets/imgcover/' ~ book.cover) }}" data-image="{{ book.cover }}" class="imgCover" alt="Photo de la couverture du livre">
                        </div>
                    {% endif %}
                {% endif %}
            {% endfor %}
        {% endfor %}
        </div>

        <div class="inProgress">Dernier livre en cours de lecture :
            {% for reading in allReadingUser %}
                {% for book in allBookForUser %}
                    {% if reading.status == '2'%}
